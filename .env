# Pixel Pulse Health App - Environment Configuration
# Last Updated: May 2025
# Copy this file to .env and fill in your actual API keys

# Google Gemini AI API Key
# Get this from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyA7ixo-CLGHCVAV0QZpIWsjEbFAyP2AVs4

# Nutrition API Key (for food database)
# Options: Edamam, Spoonacular, USDA FoodData Central
NUTRITION_API_KEY=your_nutrition_api_key_here

# Google Fit API Configuration
# Get these from Google Cloud Console
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id_here
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret_here

# Health Connect Configuration
HEALTH_CONNECT_PACKAGE_NAME=com.google.android.apps.healthdata

# Firebase Configuration (for analytics and crashlytics)
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_API_KEY=your_firebase_api_key_here

# OpenAI API Key (alternative AI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_NAME=pixel_pulse_health.db
DATABASE_VERSION=1

# App Configuration
APP_VERSION=1.0.0
MIN_SDK_VERSION=26
TARGET_SDK_VERSION=34

# Security Configuration
ENCRYPTION_KEY_ALIAS=pixel_pulse_health_key
BIOMETRIC_TIMEOUT_MS=30000

# API Endpoints
NUTRITION_API_BASE_URL=https://api.edamam.com/api/food-database/v2/
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_HEALTH_CONNECT=true
ENABLE_GOOGLE_FIT=true
ENABLE_AI_INSIGHTS=true
ENABLE_FOOD_SCANNING=true
ENABLE_ANALYTICS=true

# Debug Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_NETWORK_LOGGING=false

# Privacy and Compliance
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA compliance

# Notification Configuration
DEFAULT_NOTIFICATION_CHANNEL=health_reminders
ENABLE_PUSH_NOTIFICATIONS=true

# Sensor Configuration
HEART_RATE_SAMPLING_RATE_MS=5000
STEP_COUNTER_UPDATE_INTERVAL_MS=10000
LOCATION_UPDATE_INTERVAL_MS=60000

# AI Configuration
GEMINI_MODEL_NAME=gemini-pro
MAX_AI_RESPONSE_LENGTH=1000
AI_CONFIDENCE_THRESHOLD=0.7

# Cache Configuration
IMAGE_CACHE_SIZE_MB=50
DATA_CACHE_SIZE_MB=25
CACHE_EXPIRY_HOURS=24

# Network Configuration
REQUEST_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000 